<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <fieldset name="assign_products">
        <field name="external_id">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="sortOrder" xsi:type="number">30</item>
                    <item name="dataType" xsi:type="string">string</item>
                    <item name="formElement" xsi:type="string">textarea</item>
                    <item name="notice" xsi:type="string">Manage the products in the category by this external category. Multiple values separted by comma.</item>
                    <item name="label" xsi:type="string" translate="true">External ID</item>
                </item>
            </argument>
        </field>
        <field name="product_price_margin">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="sortOrder" xsi:type="number">40</item>
                    <item name="dataType" xsi:type="string">string</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="notice" xsi:type="string">Apply a margin to all the products assigned below.</item>
                    <item name="label" xsi:type="string" translate="true">Product Margin</item>
                </item>
            </argument>
        </field>
    </fieldset>
</form>
